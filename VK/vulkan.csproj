<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../netfx.props" />
  <PropertyGroup>
    <TargetFrameworks>net471;netstandard2.0</TargetFrameworks>
    
    <Copyright></Copyright>
    <AssemblyVersion>0.1.4</AssemblyVersion>
    <AssemblyName>VK</AssemblyName>
    <Description>C# vulkan binding</Description>
    <Company></Company>
    <Product>VK</Product>
        
    <PackageId>Vulkan</PackageId>
    <PackageTags>C# vulkan net binding</PackageTags>    
    <PackageVersion>$(AssemblyVersion)-beta</PackageVersion>        
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/jpbruyere/vk.net/blob/master/README.md</PackageProjectUrl>
    <PackageLicense>https://opensource.org/licenses/MIT</PackageLicense>
    <RepositoryUrl>https://github.com/jpbruyere/vk.net</RepositoryUrl>
    <!--<PackageIconUrl>https://github.com/KhronosGroup/glTF/blob/master/specification/figures/gltf.png</PackageIconUrl>-->
    
    <Authors>Jean-Philippe Bruy√®re</Authors> 
    <SynchReleaseVersion>false</SynchReleaseVersion>
    <OutputPath>$(SolutionDir)build\$(Configuration)\</OutputPath>
  </PropertyGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="System" />    
  </ItemGroup>
    
  <ItemGroup>
    <ProjectReference Include="..\vk.generator\vk.generator.csproj" PrivateAssets="All" />
    <ProjectReference Include="..\vk.rewrite\vk.rewrite.csproj" PrivateAssets="All" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>TRACE;NETSTANDARD;NETSTANDARD2_0;DEBUG;NETFRAMEWORK;NET471</DefineConstants>    
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
    
<!--  <ItemGroup>
    <Compile Include="../vk.generator/bin/$(Configuration)/$(TargetFramework)/*.cs">
      <Link>generated\%(Filename)%(Extension)</Link>
    </Compile>
  </ItemGroup> -->
    
  <Target Name="generate" BeforeTargets="BeforeCompile">
    <Exec Condition="$(OS) == 'Windows_NT'" Command="$(SolutionDir)vk.generator/bin/$(Configuration)/net471/vk.generator.exe" WorkingDirectory="$(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>
        
    <!--<Exec Condition="$(OS) != 'Windows_NT' and $(TargetFramework.StartsWith('net4'))" Command="mono $(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/vk.generator.exe" WorkingDirectory="$(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>  
    <Exec Condition="$(OS) != 'Windows_NT' and $(TargetFramework.StartsWith('netcore'))" Command="dotnet $(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/vk.generator.dll" WorkingDirectory="$(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>-->  
    <Exec Condition="$(OS) != 'Windows_NT'" Command="mono $(SolutionDir)vk.generator/bin/$(Configuration)/net471/vk.generator.exe" WorkingDirectory="$(SolutionDir)vk.generator/bin/$(Configuration)/$(TargetFramework)/" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>
    <CreateItem Include="../vk.generator/bin/$(Configuration)/$(TargetFramework)/*.cs">            
        <Output TaskParameter="Include" ItemName="Compile" />
    </CreateItem>        
  </Target>
        
  <Target Name="rewrite" AfterTargets="CoreBuild">
    <Exec Condition="$(OS) == 'Windows_NT'" Command="$(SolutionDir)vk.rewrite/bin/$(Configuration)/net471/vk.rewrite.exe $(OutputPath)VK.dll" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>
        
    <!--<Exec Condition="$(OS) != 'Windows_NT' and $(TargetFramework.StartsWith('net4'))" Command="mono $(SolutionDir)vk.rewrite/bin/$(Configuration)/$(TargetFramework)/vk.rewrite.exe $(OutputPath)VK.dll" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>        
    <Exec Condition="$(OS) != 'Windows_NT' and $(TargetFramework.StartsWith('netcore'))" Command="dotnet $(SolutionDir)vk.rewrite/bin/$(Configuration)/$(TargetFramework)/vk.rewrite.dll $(OutputPath)VK.dll" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>-->     
    <Exec Condition="$(OS) != 'Windows_NT'" Command="mono $(SolutionDir)vk.rewrite/bin/$(Configuration)/net471/vk.rewrite.exe $(OutputPath)VK.dll" ConsoleToMSBuild="true" EchoOff="true">
        <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>        
  </Target>
</Project>
